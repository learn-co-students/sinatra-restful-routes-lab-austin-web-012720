<form action="/recipes/<%=@recipe.id%>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch"/>
<ul>
    <li>
        <label for="recipe[name]">Name: </label>
        <input type="text" name="recipe[name]" value="<%= @recipe.name %>"/>
    </li>
    <li>
        <label for="recipe[ingredients]">Ingredients: </label>
        <input type="text" name="recipe[ingredients]" value="<%= @recipe.ingredients %>"/>
    </li>
    <li>
        <label for="recipe[cook_time]">Cook Time: </label>
        <input type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time %>"/>
    </li>
    <input type="submit" value="Submit"/>
</ul>
</form>